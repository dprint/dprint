{
  "name": "dprint-mono-repo",
  "private": true,
  "description": "A plugable and configurable code formatter.",
  "scripts": {
    "format": "ts-node --compiler ttypescript --transpile-only src/cli-bin.ts \"**/*{.ts|.tsx|.json|.js}\" \"!playground/public/vs/**/*.*\" \"!build-website/**/*.*\"",
    "build-website": "rimraf build-website && npm run --prefix playground build && mkdir -p \"build-website/playground\" && copyfiles -u 2 \"playground/build/**/*.*\" \"build-website/playground\" && copyfiles -u 1 \"website/**/*.*\" \"build-website\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dsherret/dprint.git"
  },
  "keywords": ["code", "formatter", "typescript", "jsonc"],
  "author": "David Sherret",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dsherret/dprint/issues"
  },
  "homepage": "https://github.com/dsherret/dprint#readme",
  "dependencies": {
  },
  "devDependencies": {
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "lerna": "^3.16.4",
    "rimraf": "^2.6.3",
    "ts-morph": "^3.1.3",
    "ts-node": "^8.3.0",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.3"
  }
}
