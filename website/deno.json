{
  "workspace": [
    "./playground"
  ],
  "nodeModulesDir": "manual",
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build:ci": "deno task build && cp -r playground/dist _site/playground",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "imports": {
    "compress": "https://deno.land/x/compress@v0.4.1/mod.ts",
    "lume/": "https://deno.land/x/lume@v3.1.2/",
    "markdown-it-anchor": "npm:markdown-it-anchor@8.6.7"
  },
  "allowScripts": [
    "npm:fsevents",
    "npm:@parcel/watcher",
    "npm:core-js-pure",
    "npm:core-js"
  ]
}
